<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gameback"
    android:weightSum="1">
    
    <ImageView 
    	android:layout_height="wrap_content" 
    	android:id="@+id/imageView1" 
    	android:src="@drawable/help" 
    	android:layout_width="match_parent"
    	android:layout_marginTop="10pt"
    	android:layout_marginBottom="10pt"
    	android:layout_marginRight="14pt"
    	android:layout_marginLeft="14pt" 
    	android:layout_weight="0.12">
    	</ImageView>
    <ImageView android:layout_weight="0.12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView2" android:src="@drawable/unjumblehelp"></ImageView>
    <ImageView android:layout_weight="0.12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView3" android:src="@drawable/lowercase"></ImageView>
    <ImageView android:layout_weight="0.12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView4" android:src="@drawable/havefun"></ImageView>
    	
        	</LinearLayout>
