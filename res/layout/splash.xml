    <ImageView 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:src="@drawable/play" 
    	android:layout_weight="0.12"
    	android:layout_gravity="right" 
    	android:id="@+id/imageView2">
    	</ImageView>
        
        	</LinearLayout>
