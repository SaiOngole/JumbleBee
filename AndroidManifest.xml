<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.vamsi.JumbleBee"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".JumbleBeeActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuScreen"/>
		<activity android:name=".Easy"
		android:configChanges="orientation"/>
		<activity android:name=".Medium"
		android:configChanges="orientation"/>
		<activity android:name=".Hard"
		android:configChanges="orientation"/>
		<activity android:name=".HelpScreen"/>
		<activity android:name=".PlayScreen"/>
		<activity android:name=".CreditsScreen"/>
		
    </application>
</manifest>